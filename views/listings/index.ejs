      .tax-switch {
        position: relative;
        width: 48px;
        height: 28px;
        display: inline-block;
      }

      .tax-switch input[type="checkbox"] {
        opacity: 0;
        width: 48px;
        height: 28px;
        cursor: pointer;
        position: absolute;
        left: 0; top: 0;
        z-index: 2;
      }

      .tax-slider {
        position: absolute;
        top: 6px; left: 0;
        width: 48px;
        height: 24px;
        background: #ddd;
        border-radius: 999px;
        transition: background 0.2s;
      }

      .tax-switch input:checked + .tax-slider {
        background: #34d399;
      }

      .tax-slider::before {
        content: "";
        position: absolute;
        left: 4px;
        top: 4px;
        width: 20px;
        height: 16px;
        background: #fff;
        border-radius: 50%;
        transition: transform 0.2s;
        box-shadow: 0 1px 4px rgba(0,0,0,0.10);
      }

      .tax-switch input:checked + .tax-slider::before {
        transform: translateX(20px);
      }

      .tax-toggle.active {
        background: #e6f7f2;
        border-color: #34d399;
      }
      .tax-toggle:hover {
        background: #e6f7f2;
        border-color: #34d399;
      }

      .tax-toggle.active .tax-label {
        color: #059669;
        font-weight: 400;
      }
      
      .form-check-reverse {
