<% if(success && success.length) { %>
    <div id="flash-success" class="alert alert-success alert-dismissible fade show col-6 offset-3 text-center" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    
    <% if(error && error.length) { %>
    <div id="flash-error" class="alert alert-danger alert-dismissible fade show col-6 offset-3 text-center" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    